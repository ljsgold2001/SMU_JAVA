
package exam2;
import javax.swing.*;
import java.util.*;
import java.awt.*;

public class Phone extends JFrame{

	
		JButton btn1 = new JButton("삽입 ");
		JButton btn2 = new JButton("삭제 ");
		JButton btn3 = new JButton("수정 ");
		JButton btn4 = new JButton("조회 ");
		
		JPanel panel = new JPanel();
		
		JLabel l1 = new JLabel("name");
		JLabel l2 = new JLabel("address");
		JLabel l3 = new JLabel("Phone");
		
		JTextField tf1 = new JTextField(150);
		JTextField tf2 = new JTextField(150);
		JTextField tf3 = new JTextField(150);
		
	
	
	
	public Phone(){
		Container c = getContentPane();
		
		setTitle("자바 시험공부2 ");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		
		c.setLayout(null);
		btn1.setLocation(450, 100);
		btn1.setSize(100, 50);
		c.add(btn1);

		btn2.setLocation(550, 100);
		btn2.setSize(100, 50);
		c.add(btn2);

		btn3.setLocation(650, 100);
		btn3.setSize(100, 50);
		c.add(btn3);

		btn4.setLocation(750, 100);
		btn4.setSize(100, 50);
		c.add(btn4);
		
		panel.setLayout(new GridLayout(3,2));
		
		panel.add(l1);
		panel.add(tf1);
		
		panel.add(l2);
		panel.add(tf2);
		
		panel.add(l3);
		panel.add(tf3);
		
		c.add(panel);
		
		setSize(900,400);
		setVisible(true);
	
}
public static void main(String[] args) {
	new Phone();
}
}